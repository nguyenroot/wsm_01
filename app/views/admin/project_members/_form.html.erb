<div class="content">
  <div class="women_main">
    <div class="grids">
      <div class="progressbar-heading grids-heading">
        <h1><%= yield(:modal_title) %></h1>
      </div>
      <div class="panel panel-widget forms-panel">
        <div class="forms">
          <div class="form-grids widget-shadow" data-example-id="basic-forms">
            <div class="form-title">
              <h4><%= t ".form" %></h4>
            </div>
            <div class="form-body">
              <%= simple_form_for [:admin, @project_member] do |f| %>
                <div class="form_errors">
                  <%= render "shared/error_messages",
                    object: @project_member %>

                    <div class="form-group">
                      <%= f.label :user_id %>
                      <%= f.select :user_id,
                        @users.collect {|user| [user.name,
                          user.id]}, {}, {class: "form-control"} %>
                    </div>

                    <div class="form-group">
                      <%= f.label :project_id %>
                      <%= f.select :project_id,
                        @projects.collect {|project| [project.name,
                          project.id]}, {}, {class: "form-control"} %>
                    </div>

                    <div class="form-group">
                      <%= f.label :project_role %>
                      <%= f.select :project_role,
                        ProjectMember.project_roles.keys.to_a, {},
                        {class: "form-control"} %>
                    </div>


                </div>
                <div class="modal-footer">
                  <span class="pull-right">
                    <%= f.submit t(".create_project"),
                      class: "btn btn-default" %>
                  </span>
                  <span class="pull-left">
                    <%= link_to t(".cancel_button"), "#",
                      class: "btn btn-default", data: {dismiss: "modal"} %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
