<div class="page-container">
  <div class="left-content">
    <div class="header-section">
      <div class="top_bg">
        <div class="header_top">
          <div class="top_right">
            <ul>
              <li><%= link_to t("home"), root_path %></li>
              <% if admin_signed_in? %>
                <li><%= link_to t("managers"), admin_users_path %></li>
                <li><%= link_to t("workspaces"), admin_workspaces_path %></li>
              <% else %>
                <% if user_signed_in? %>
                  <% if current_user.manager? %>
                    <li><%= link_to t("manage_workspace"), "#" %></li>
                    <li><%= link_to t("manage_users"), users_path %></li>
                    <li><%= link_to t("manage_skills"), "#" %></li>
                    <li><%= link_to t("manage_projects"),
                      projects_path %></li>
                  <% else %>
                    <li><%= link_to t("user_workspace"), "#" %></li>
                  <% end %>
                <% else %>
                  <li><%= link_to t("login"), "#" %></li>
                <% end %>
                <li><%= link_to t("contact"), "#" %></li>
                <li><%= link_to t("help"), "#" %></li>
              <% end %>
            </ul>
          </div>
          <div class="top_left">
            <h2><span></span> <%= t ".callus" %></h2>
          </div>
          <div class="clearfix"> </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="header_bg">
      <div class="header">
        <div class="head-t">
          <div class="header_left">
            <%= link_to image_tag("logo.png", class:"img-responsive"),
              root_path %>
            <div class="header_right">
              <div class="rgt-bottom">
                <div class="log">
                  <div class="login">
                    <div id="loginContainer">
                      <%= link_to t("login"), "#", id:"loginButton" %>
                      <div id="loginBox" style="display: none;">
                        <form id="loginForm">
                          <fieldset id="body">
                            <fieldset>
                              <label for="email"><%= t ".email" %></label>
                              <input type="text" name="email" id="email">
                            </fieldset>
                            <fieldset>
                              <label for="password">
                                <%= t ".password" %>
                              </label>
                              <input type="password" name="password"
                                id="password">
                            </fieldset>
                            <input type="submit" id="login" value="Sign in">
                            <label for="checkbox">
                              <input type="checkbox" id="checkbox">
                                <i><%= t ".remember" %></i>
                            </label>
                          </fieldset>
                          <span><%= link_to t(".forgotpassword"), "#" %>
                          </span>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="reg">
                  <%= link_to t(".register"), "#" %>
                </div>
                <div class="clearfix"> </div>
              </div>
              <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
          </div>
        </div>
      </div>
    </div>
    <div class="inner-content">
      <div class="sidebar-menu">
        <header class="logo1">
          <%= link_to "#", class:"sidebar-icon" do %>
            <span class="fa fa-bars"></span>
          <% end %>
        </header>
        <div class="menu">
          <ul id="menu" >
            <li id="menuu-academico">
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>
                <span><%= t("home") %></span>
              <% end %>
            </li>
            <li id="menu-academico" >
              <%= link_to static_pages_help_path do %>
                <i class="fa fa-table"></i>
                <span><%= t("help") %></span>
              <% end %>
            </li>
            <li id="menu-academico" >
              <% if admin_signed_in? %>
                <li class="dropdown">
                  <%= link_to current_admin.email, "#",
                    class: "dropdown-toggle", data: {toggle: "dropdown"} %>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(".profile"), "#" %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t(".logout"), destroy_admin_session_path,
                        method: :delete %>
                    </li>
                  </ul>
                </li>
              <% elsif user_signed_in? %>
                <li class="dropdown">
                  <%= link_to current_user.name, "#", class: "dropdown-toggle",
                    data: {toggle: "dropdown"} %>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(".profile"),
                      edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t(".logout"), destroy_user_session_path,
                        method: :delete %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <%= link_to new_user_session_path do %>
                  <i class="fa fa-file-text-o"></i>
                  <span><%= t "login" %></span>
                <% end %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <div class="clearfix"></div>
</div>
